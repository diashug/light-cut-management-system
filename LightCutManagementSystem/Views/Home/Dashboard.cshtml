
@{
    ViewData["Title"] = "Dashboard";
}

<div id="dashboardApp">
    <div class="container-fluid top-space">
        <div id="wrapper">
            <nav style="margin-bottom: 0">
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-dashboard"></i> Dashboard</a>
                            </li>
                            <li>
                                <a asp-controller="Statistic" asp-action="Index"><i class="fa fa-bar-chart-o fa-fw"></i> Estatísticas</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">@ViewData["Title"]</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <h4>Encomendas</h4>
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        <div class="huge">{{ numberOfOrders }}</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 text-right">
                                        Pendentes
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-red">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <h4>Pagamentos</h4>
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        <div class="huge">{{ numberOfPendingPayments }}</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12 text-right">
                                        Pendentes
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom-space"></div>
    <footer id="footer" class="navbar navbar-default navbar-fixed-bottom footer">
        <footer-menu></footer-menu>
    </footer>
</div>
<script src="~/js/dashboard.js" type="text/javascript"></script>

