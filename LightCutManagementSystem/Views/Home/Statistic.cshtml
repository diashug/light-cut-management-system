
@{
    ViewData["Title"] = "Estatísticas";
}

<div id="statisticsApp">
    <div class="container-fluid top-space">
        <div id="wrapper">
            <nav style="margin-bottom: 0">
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-dashboard"></i> Dashboard</a>
                            </li>
                            <li>
                                <a asp-controller="Statistic" asp-action="Index"><i class="fa fa-bar-chart-o fa-fw"></i> Estatísticas</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Estatísticas</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Nº de federados por género [Total]</h3>
                            </div>
                            <div class="panel-body text-center">
                                <total-genders-chart :data="numberOfMembersPerGenderChartData" :options="options" :width="500" :height="400"></total-genders-chart>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Nº de federados por género [Região]</h3>
                            </div>
                            <div class="panel-body">
                                <region-genders-chart :data="numberOfMembersPerGenderPerRegionChartData" :options="options" :width="500" :height="400"></region-genders-chart>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Nº de federados por faixa etária [Total]</h3>
                            </div>
                            <div class="panel-body">
                                <total-age-groups-chart :data="numberOfMembersPerAgeGroupChartData" :options="options" :width="500" :height="400"></total-age-groups-chart>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Nº de federados por faixa etária [Região]</h3>
                            </div>
                            <div class="panel-body">
                                <region-age-groups-chart :data="numberOfMembersPerAgeGroupPerRegionChartData" :options="options" :width="500" :height="400"></region-age-groups-chart>
                            </div>
                            <div class="panel-footer">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom-space"></div>
    <footer id="footer" class="navbar navbar-default navbar-fixed-bottom footer">
        <footer-menu></footer-menu>
    </footer>
</div>